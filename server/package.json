{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --minify --target=node18 --outfile=dist/app.js --packages=external",
    "start": "node dist/app.js",
    "build:tsc": "tsc -p tsconfig.json",
    "db:sync": "tsx src/scripts/db-sync.ts",
    "db:reset": "tsx src/scripts/db-reset.ts",
    "db:seed:levels": "tsx src/scripts/seed-levels.ts",
    "dbserver:sync": "node dist/scripts/db-sync.js",
    "dbserver:reset": "node dist/scripts/db-reset.js",
    "dbserver:seed:levels": "node dist/scripts/seed-levels.js",
    "migrate:old": "tsx src/scripts/migrate-from-old.ts",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.5",
    "openai": "^4.104.0",
    "reflect-metadata": "^0.2.2",
    "sql.js": "^1.13.0",
    "ts-fsrs": "^5.2.3",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.3",
    "@types/serve-static": "^1.15.8",
    "esbuild": "^0.27.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
